// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
}

// Define an abstract model called `Item` that serves as the base for movies, books, and songs.
model Item {
  id       Int    @id @default(autoincrement())
  itemType String // This field specifies the type of item (e.g., "movie", "book", "song")
  movie    Movie? @relation("MovieItem")
  book     Book?  @relation("BookItem")
  song     Song?  @relation("songItem")
  title    String
  genre    String
}

// Define specific models for movies, books, and songs.
model Movie {
  item        Item     @relation("MovieItem", fields: [itemId], references: [id])
  releaseDate DateTime
  itemId      Int      @id
  director    String
  castMembers Cast[]
  country     String?
  duration    Int
}

model Cast {
  id    Int    @id
  name  String
  movie Movie  @relation(fields: [id], references: [itemId])
}

model Book {
  item            Item     @relation("BookItem", fields: [itemId], references: [id])
  itemId          Int      @id
  author          String
  pages           Int?
  publicationDate DateTime
}

model Song {
  item        Item     @relation("songItem", fields: [itemId], references: [id])
  itemId      Int      @id
  artist      String
  album       String?
  releaseDate DateTime
}
