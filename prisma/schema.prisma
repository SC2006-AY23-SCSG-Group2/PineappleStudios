// Define an abstract model called `Item` that serves as the base for movies, books, and songs.
model Item {
  id              Int      @id @default(autoincrement())
  itemType        String   // This field specifies the type of item (e.g., "movie", "book", "song")
  movie           Movie[]
  book            Book[]   
  song            Song[]    
  title           String
  genre           String
  country         String?
  publicationDate DateTime
}

// Define specific models for movies, books, and songs.
model Movie {
  id       Int   @id
  duration Int
  movieId  Int
  item     Item  @relation(fields: [movieId], references: [id])
}

model Book {
  id       Int   @id
  pages    Int?
  bookId   Int
  item     Item  @relation(fields: [bookId], references: [id])
}

model Song {
  id       Int   @id
  album    String?
  songId   Int
  item     Item  @relation(fields: [songId], references: [id])
}
